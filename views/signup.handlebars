<div class="d-flex align-items-center mt-4 centering-container">
  <div class="card info-card p-4 col-md-4 mx-auto max-width-500">
    <h2 class="mb-4 text-center">Create an Account</h2>
    <form>
      <div class="mb-4 input-card p-2">
        <label for="email" class="form-label pl-2">Email address</label>
        <input type="email" placeholder="example@exmpl.com" class="form-control border-0 inp" id="email" />
      </div>
      <div class="mb-4 input-card p-2">
        <label for="name" class="form-label pl-2">Name</label>
        <input type="text" placeholder="Bobby Bobson" class="form-control border-0 inp" id="name" />
      </div>
      <div class="mb-4 input-card p-2">
        <label for="password" class="form-label pl-2">Password</label>
        <input type="text" placeholder="*********" class="form-control border-0 inp" id="password" />
      </div>
    </form>
    <div class="mb-3 form-check text-center pr-3">
      <button type="submit" class="btn btn-primary mx-auto" id="signupBtn">Signup</button>
      <button type="submit" class="btn btn-primary mx-auto" id="loginBtn">Login</button>
    </div>
  </div>
</div>

<script src="/js/signup.js"></script>