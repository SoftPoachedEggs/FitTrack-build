<!-- If logged in main body of site -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="/profile"><img src="/assets/images/branding/FITTRACK_SYMBOL_NAVY.png" class="img-fluid"></a>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
    </ul>
  </div>
<button class="btn btn-primary justify-content-end custm-btn" id="logoutBtn">Sign Out</button>
</nav>

<div class="row" id="big-div">
  <section class="container-fluid space-between col mt-4">
    <!-- Container for profile-pic -->
    <div class="profile-card mx-auto" id="user-profile-card">
      {{> profileDisplay}}
    </div>

    <!-- Tabs or Pills can be used in a card with the help of .nav-{tabs|pills} and .card-header-{tabs|pills} classes -->
    <section class="container-fluid p-4">
    {{> goals}}
    </section>
  </section>

  <!-- Container for Chart -->
  <section class="col d-flex align-items-center">
    <div class="chart-card p-5" id="chart-display">
      <div class="row justify-content-center">
        <button class="btn btn-primary" id="activityBtn">+ Log Activity</button>
        <button class="btn btn-primary" id="allActivitiesBtn">All</button>
        <button class="btn btn-primary" id="runningBtn">Running</button>
        <button class="btn btn-primary" id="swimmingBtn">Swimming</button>
        <button class="btn btn-primary" id="bikingBtn">Biking</button>
      </div>
      <br />
      <br />
      {{!-- </div>
      {{> activityGraph}}
      </div> --}}
      <div class="mx-auto">
        <canvas id="activityGraph"></canvas>
      </div>
    </div>
  </section>
</div>

<script src="/js/profile.js"></script>
<script src="/js/graph.js"></script>

